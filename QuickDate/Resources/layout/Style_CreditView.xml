<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="1"
    android:layout_width="165dp"
    android:layout_height="200dp"
    android:layout_marginEnd="0dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginStart="6dp"
    android:layout_marginBottom="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_gravity="fill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="?attr/colorFill"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="5dp"
        android:layout_margin="2dp"
        app:cardElevation="1dp">
        <RelativeLayout
            android:id="@+id/background"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/headtitle"
                  android:layout_marginStart="5dp"
                  android:layout_marginEnd="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                 />
            <TextView
                android:id="@+id/coincount"
                android:layout_below="@+id/headtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                 android:textStyle="bold"  android:textSize="16dp"
                android:layout_centerHorizontal="true"
                 />
            <ImageView
                android:id="@+id/creditImage"
                android:layout_below="@+id/coincount"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/image_coin"
				android:scaleType="centerCrop"
                android:layout_centerHorizontal="true" />
            <View
                android:id="@+id/line"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_above="@+id/lasttext"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="?attr/colorDivider" />
            <TextView
                android:id="@+id/lasttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:textSize="19dp"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                 />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>